@model IEnumerable<Course>

<section class="ftco-section courses-section">
    <div class="container">
        <div class="row">
            @foreach(var item in Model){
            <div class="col-md-6 col-lg-4" data-aos="flip-left" data-aos-delay="100" data-aos-duration="1000">
                <div class="courses">
                    <div class="d-flex">
                        @* <div class="icon"><span class="flaticon-engineer"></span></div> *@
                        <div>
                         <img  src="@item.ImageUrl" alt="Course Image" width="90%" height="90%">
                        </div>
                        <div class="text">
                                <h1>@item.Title</h1>
                                <h3>@item.Category</h3>
                                <div>@item.Description</div>
                            <p class="lec"><a href="#">@item.EnrollmentCount enrolled students!!!</a></p> 
                        </div>
                    </div>

                    <div class="text-center">
                        <a asp-controller="Course" asp-action="Enroll" asp-route-id="@item.Id" class="btn d-block btn-primary btn-outline-primary py-3">Enroll Now!</a>
                    </div>
                </div>
            </div>
            }
            

        </div>
