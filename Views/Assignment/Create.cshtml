@inject UserManager<IdentityUser> UserManager
@using Microsoft.AspNetCore.Identity
@model Assignment


    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row no-gutters justify-content-center">
                <div class="col-md-12">
                    <div class="wrapper">
                        <div class="row g-0">
                            <div class="col-lg-6 order-lg-last">
                                <div class="contact-wrap w-100 p-md-5 p-4">
                                    <h3>Create Assignment</h3>
                                    @* <p class="mb-4">text</p> *@
                                    
                                    <form method="post" asp-action="Create" asp-controller="Assignment" enctype="multipart/form-data" id="contactForm" class="contactForm">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <input asp-for="Title" type="text" class="form-control"  placeholder="Title">
                                                </div>
                                            </div>
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <textarea asp-for="Description" type="text" class="form-control" cols="30" rows="4" placeholder="Description"></textarea>
                                            </div>
                                        </div>
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <input asp-for="DueDate" type="datetime" class="form-control"  placeholder="Due Date">
                                                </div>
                                            </div>
                                        <div>
                                            <input asp-for="CourseId" value="@ViewBag.Id" hidden/>
                                        </div>

                                        <div class="col-md-12">
                                                <div class="form-group">
                                                    <input type="submit" value="Send" class="btn btn-primary">
                                                    <div class="submitting"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    
                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-stretch">
                                <div id="map" class="bg-white"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    