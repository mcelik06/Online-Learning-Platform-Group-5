@inject UserManager<IdentityUser> UserManager
@using Microsoft.AspNetCore.Identity
@model Enrollment

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row no-gutters justify-content-center">
            <div class="col-md-12">
                <div class="wrapper">
                    <div class="row g-0">
                        <div class="col-lg-12 order-lg-last">
                            <div class="contact-wrap w-100 p-md-5 p-4">
                                <h3>Approve Enrollment</h3>

                                <form method="post" asp-action="Enroll" asp-controller="Enrollment" class="contactForm">
                                    <div>
                                        <img src=@ViewBag.ImgUrl alt="Course Image" style="height:300px; width:auto"/>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Course Title</label>
                                                <input  type="text" class="form-control" value=@ViewBag.Title disabled>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Course Category</label>
                                                <input type="text" class="form-control" value=@ViewBag.Category disabled>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Course Description</label>
                                                <input type="text" class="form-control" value=@ViewBag.Desc disabled>
                                            </div>
                                        </div>
                                        <div>
                                            <input asp-for="UserId" value=@UserManager.GetUserId(User) hidden/>
                                            <input asp-for="CourseId" value=@ViewBag.Id hidden/>
                                            <input asp-for="EnrollmentDate" value=@ViewBag.Time hidden/>
                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="submit" value="Enroll" class="btn btn-primary">
                                                <div class="submitting"></div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <div class="col-lg-12 d-flex align-items-stretch">
                            <div id="map" class="bg-white"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>